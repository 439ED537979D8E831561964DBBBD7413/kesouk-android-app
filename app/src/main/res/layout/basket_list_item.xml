<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@color/white"
        android:layout_marginBottom="2dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/image_layout"
                android:layout_width="100dp"
                android:layout_height="140dp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/logo"
                    android:layout_marginLeft="10dp"
                    android:scaleType="fitXY"
                    android:layout_marginTop="2dp"

                    />
                <TextView
                    android:id="@+id/tag_price"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:background="@drawable/oval_red"
                    android:text="15 % off "
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/white"
                    android:textSize="@dimen/padding_10"
                    android:textStyle="normal"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:gravity="center_horizontal"
                    android:padding="5dp"
                    android:visibility="gone"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/name_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_5"
                android:layout_marginTop="@dimen/padding_25"
                android:layout_toRightOf="@+id/image_layout">

                <TextView
                    android:id="@+id/tv_prodname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_5"
                    android:layout_marginRight="@dimen/padding_70"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="AASHIRVAAD SHUDH chak  WHOLE  gfgfgfgfgfgWHEAT - 10 KG"
                    android:textAllCaps="true"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/black"
                    android:textSize="@dimen/padding_15"
                    android:textStyle="bold" />


                <ImageView
                    android:id="@+id/bike"
                    android:layout_width="@dimen/padding_35"
                    android:layout_height="@dimen/padding_35"
                    android:layout_marginRight="@dimen/padding_5"
                    android:src="@drawable/bike_new"
                    android:layout_alignParentRight="true"


                    />


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/price_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name_layout"
                android:layout_toRightOf="@+id/image_layout"
                android:layout_marginTop="@dimen/padding_5"
                android:layout_marginBottom="@dimen/padding_5"

                >

                <TextView
                    android:id="@+id/off_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/padding_10"
                    android:gravity="center"
                    android:text="$120.50 off"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/black"
                    android:textSize="@dimen/padding_12"
                    android:textStyle="normal"
                    android:layout_marginTop="@dimen/padding_10"



                    />

                <ImageView
                    android:id="@+id/remove"
                    android:layout_width="@dimen/padding_35"
                    android:layout_height="@dimen/padding_30"
                    android:layout_marginRight="@dimen/padding_5"
                    android:src="@drawable/delete_icon"
                    android:layout_alignParentRight="true"


                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/cart_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/price_layout"
                android:layout_marginBottom="@dimen/padding_5"
                android:layout_marginLeft="@dimen/padding_10"
                android:layout_toRightOf="@+id/image_layout"
                >

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/padding_10"
                    android:text="$110.50"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/black"
                    android:textSize="@dimen/padding_18"
                    android:textStyle="normal"
                    android:layout_marginTop="@dimen/padding_10"


                    />

                <RelativeLayout
                    android:id="@+id/cart1_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="@dimen/padding_5"
                    android:layout_marginRight="@dimen/padding_5"
                    android:background="@drawable/button_red"
                    android:paddingTop="@dimen/padding_5"
                    android:paddingBottom="@dimen/padding_5"
                    android:paddingLeft="@dimen/padding_5"
                    android:paddingRight="@dimen/padding_5"


                    >

                    <ImageView
                        android:id="@+id/minusimg"
                        android:layout_width="@dimen/padding_20"
                        android:layout_height="@dimen/padding_20"
                        android:src="@drawable/minus_icon"
                        android:layout_marginTop="@dimen/padding_5"
                        />

                    <TextView
                        android:id="@+id/count_cart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/padding_10"
                        android:layout_marginRight="@dimen/padding_10"
                        android:layout_toRightOf="@+id/minusimg"
                        android:text="1"
                        android:textColor="@color/white"
                        android:textSize="@dimen/padding_25"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/plusimg"
                        android:layout_width="@dimen/padding_20"
                        android:layout_height="@dimen/padding_20"
                        android:layout_toRightOf="@+id/count_cart"
                        android:src="@drawable/plus_icon"
                        android:layout_marginTop="@dimen/padding_5"


                        />
                </RelativeLayout>
            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>