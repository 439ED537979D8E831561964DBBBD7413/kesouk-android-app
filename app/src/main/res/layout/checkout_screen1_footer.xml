<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <Button
        android:id="@+id/add_addr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_horizontal_margin"
        android:text="@string/addaddr1"
        android:textColor="@color/white"
        android:background="@drawable/button_red"
        android:textSize="@dimen/padding_15"
        android:layout_marginLeft="@dimen/padding_60"
        android:layout_marginRight="@dimen/padding_60"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/padding_80"

        />
    <Button
        android:id="@+id/continue_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_horizontal_margin"
        android:text="@string/continue_text"
        android:textColor="@color/white"
        android:background="@drawable/green_solid"
        android:textSize="@dimen/padding_15"
        android:layout_below="@+id/add_addr"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:visibility="gone"

        />

</RelativeLayout>