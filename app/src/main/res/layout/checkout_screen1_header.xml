<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_20"
        android:layout_marginTop="@dimen/padding_20"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_5"
            android:layout_marginRight="@dimen/padding_5"
            android:gravity="center">

            <Button
                android:id="@+id/btn1"
                android:textColor="@color/white"
                android:layout_width="@dimen/padding_30"
                android:layout_height="@dimen/padding_30"
                android:background="@drawable/circle_button_green"
                android:text="1"
                android:textSize="@dimen/padding_20" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_5"
            android:layout_marginRight="@dimen/padding_5"
            android:gravity="center">

            <Button
                android:id="@+id/btn2"
                android:layout_width="@dimen/padding_30"
                android:layout_height="@dimen/padding_30"
                android:layout_gravity="center"
                android:background="@drawable/circle_button"
                android:text="2"
                android:textSize="@dimen/padding_20" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_5"
            android:layout_marginRight="@dimen/padding_5"
            android:gravity="center">

            <Button
                android:id="@+id/btn3"
                android:layout_width="@dimen/padding_30"
                android:layout_height="@dimen/padding_30"
                android:layout_gravity="center"
                android:background="@drawable/circle_button"
                android:text="3"
                android:textSize="@dimen/padding_20" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_5"
            android:layout_marginRight="@dimen/padding_5"
            android:gravity="center">

            <Button
                android:id="@+id/btn4"
                android:layout_width="@dimen/padding_30"
                android:layout_height="@dimen/padding_30"
                android:layout_gravity="center"
                android:background="@drawable/circle_button"
                android:text="4"
                android:textSize="@dimen/padding_20" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/default_location"
        android:layout_marginLeft="@dimen/padding_5"
        android:textStyle="bold"
        android:id="@+id/defaultaddr"

        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_10"
        android:layout_marginBottom="@dimen/padding_10"
        android:id="@+id/relative_item"
        android:layout_marginLeft="@dimen/padding_5"
        android:layout_marginRight="@dimen/padding_5"
        android:background="@drawable/rectangle_gray"
        android:paddingTop="@dimen/padding_5"
        android:paddingBottom="@dimen/padding_5"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dsfffj"
            android:textSize="@dimen/padding_17"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/padding_5"
            android:id="@+id/name_def"
            android:layout_marginRight="@dimen/padding_5"
            android:maxLines="2"
            android:layout_marginTop="@dimen/padding_10"
            android:textStyle="bold"



            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dsffdgdfgndsfgdnfgkjfdgkjskjgnfsngjgsgnffksjnffsngfnsjggsdkgdskjgkjdfgkjdfj"
            android:textSize="@dimen/padding_15"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/padding_15"
            android:id="@+id/address_def"
            android:layout_marginRight="@dimen/padding_5"
            android:layout_toLeftOf="@+id/edit"
            android:layout_below="@+id/name_def"
            android:layout_marginBottom="@dimen/padding_5"

            />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="@dimen/padding_20"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/padding_10"
            android:id="@+id/edit_def"
            android:layout_marginTop="@dimen/padding_10"
            android:text="Change"
            android:background="@drawable/rectangle_gray"


            />



    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/other_addr"
        android:layout_marginLeft="@dimen/padding_5"
        android:id="@+id/otheraddr"
        android:textStyle="bold"


        />
</LinearLayout>
