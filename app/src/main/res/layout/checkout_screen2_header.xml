<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_20"
        android:layout_marginTop="@dimen/padding_20"
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/number_layout"
        android:layout_below="@+id/app_bar"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_5"
            android:layout_marginRight="@dimen/padding_5"
            android:gravity="center">

            <Button
                android:id="@+id/btn1"
                android:textColor="@color/black"
                android:layout_width="@dimen/padding_30"
                android:layout_height="@dimen/padding_30"
                android:background="@drawable/circle_button"
                android:text="1"
                android:textSize="@dimen/padding_20" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_5"
            android:layout_marginRight="@dimen/padding_5"
            android:gravity="center">

            <Button
                android:id="@+id/btn2"
                android:layout_width="@dimen/padding_30"
                android:layout_height="@dimen/padding_30"
                android:layout_gravity="center"
                android:background="@drawable/circle_button_green"
                android:text="2"
                android:textSize="@dimen/padding_20"
                android:textColor="@color/white"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_5"
            android:layout_marginRight="@dimen/padding_5"
            android:gravity="center">

            <Button
                android:id="@+id/btn3"
                android:layout_width="@dimen/padding_30"
                android:layout_height="@dimen/padding_30"
                android:layout_gravity="center"
                android:background="@drawable/circle_button"
                android:text="3"
                android:textSize="@dimen/padding_20" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_5"
            android:layout_marginRight="@dimen/padding_5"
            android:gravity="center">

            <Button
                android:id="@+id/btn4"
                android:layout_width="@dimen/padding_30"
                android:layout_height="@dimen/padding_30"
                android:layout_gravity="center"
                android:background="@drawable/circle_button"
                android:text="4"
                android:textSize="@dimen/padding_20" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_gray_brder"
        android:layout_below="@+id/number_layout"
        android:layout_marginLeft="@dimen/padding_5"
        android:layout_marginRight="@dimen/padding_5"
        android:id="@+id/express_layout"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/expressdel"
            android:layout_marginLeft="@dimen/padding_5"
            android:textStyle="bold"
            android:id="@+id/express_title"
            android:layout_marginTop="@dimen/padding_5"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_5"
            android:layout_below="@+id/express_title"
            android:layout_marginTop="@dimen/padding_10"
            android:id="@+id/expressnote"


            />
        <Button
            android:id="@+id/getexprssdel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="@dimen/padding_10"
            android:text="@string/getexprr"
            android:textSize="@dimen/padding_15"
            android:textColor="@color/black"
            android:background="@drawable/yellow_solid"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/padding_10"
            android:layout_marginBottom="@dimen/padding_10"
            android:layout_below="@+id/expressnote"

            />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/stnddel"
        android:layout_marginLeft="@dimen/padding_5"
        android:textStyle="bold"
        android:id="@+id/standarddel_title"
        android:layout_marginTop="@dimen/padding_5"
        android:layout_below="@+id/express_layout"
        android:textSize="@dimen/padding_15"/>
    <LinearLayout
        android:id="@+id/control_btns_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_10"
        android:layout_marginRight="@dimen/padding_10"
        android:layout_marginTop="@dimen/padding_5"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/padding_5"
        android:paddingTop="@dimen/padding_5"
        android:layout_below="@+id/standarddel_title"
        android:weightSum="3">

        <TextView
            android:id="@+id/previous"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/padding_15" />

        <TextView
            android:id="@+id/calender"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="Calendar"
            android:background="@color/gray"
            android:textSize="@dimen/padding_15" />

        <TextView
            android:id="@+id/next"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/padding_15" />


    </LinearLayout>

        <LinearLayout
            android:id="@+id/day_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_5"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/padding_5"
            android:paddingTop="@dimen/padding_5"
            android:layout_below="@+id/control_btns_layout"
            android:weightSum="4">

            <TextView
                android:id="@+id/mrng"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/rectangle_border_solid"
                android:text="Morning"
                android:paddingTop="@dimen/padding_5"
                android:paddingBottom="@dimen/padding_5"
                android:textSize="@dimen/padding_15" />

            <TextView
                android:id="@+id/tomm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="Tomorrow"
                android:background="@drawable/rectangle_border_solid"
                android:textSize="@dimen/padding_15"
                android:paddingTop="@dimen/padding_5"
                android:paddingBottom="@dimen/padding_5"/>

            <TextView
                android:id="@+id/sat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="Saturday"
                android:background="@drawable/rectangle_border_solid"
                android:textSize="@dimen/padding_15"
                android:paddingTop="@dimen/padding_5"
                android:paddingBottom="@dimen/padding_5"/>

            <TextView
                android:id="@+id/sun"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/rectangle_border_solid"
                android:textColor="@color/white"
                android:text="Sunday"
                android:textSize="@dimen/padding_15"
                android:paddingTop="@dimen/padding_5"
                android:paddingBottom="@dimen/padding_5"/>
        </LinearLayout>


    </RelativeLayout>