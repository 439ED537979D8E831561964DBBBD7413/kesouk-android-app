<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">
    <include
        android:id="@+id/app_bar"
        layout="@layout/category_list_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_20"
        android:layout_marginTop="@dimen/padding_20"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_below="@+id/app_bar"
        android:id="@+id/number_layout"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_5"
            android:layout_marginRight="@dimen/padding_5"
            android:gravity="center">

            <Button
                android:id="@+id/btn1"
                android:textColor="@color/black"
                android:layout_width="@dimen/padding_30"
                android:layout_height="@dimen/padding_30"
                android:text="1"
                android:background="@drawable/circle_button"

                android:textSize="@dimen/padding_20" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_5"
            android:layout_marginRight="@dimen/padding_5"
            android:gravity="center">

            <Button
                android:id="@+id/btn2"
                android:layout_width="@dimen/padding_30"
                android:layout_height="@dimen/padding_30"
                android:layout_gravity="center"
                android:background="@drawable/circle_button"
                android:text="2"
                android:textSize="@dimen/padding_20" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_5"
            android:layout_marginRight="@dimen/padding_5"
            android:gravity="center">

            <Button
                android:id="@+id/btn3"
                android:layout_width="@dimen/padding_30"
                android:layout_height="@dimen/padding_30"
                android:layout_gravity="center"
                android:background="@drawable/circle_button"
                android:text="3"
                android:textSize="@dimen/padding_20" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/padding_5"
            android:layout_marginRight="@dimen/padding_5"
            android:gravity="center">

            <Button
                android:id="@+id/btn4"
                android:layout_width="@dimen/padding_30"
                android:layout_height="@dimen/padding_30"
                android:layout_gravity="center"
                android:text="4"
                android:textColor="@color/white"
                android:background="@drawable/circle_button_green"

                android:textSize="@dimen/padding_20" />
        </LinearLayout>
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/radio_layout"
        android:layout_below="@+id/number_layout"


        >

        <CheckBox
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/next_order"
            android:checked="true"
            android:background="@drawable/button_style"
            android:button="@drawable/radio_button_address"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/padding_20"
            android:layout_marginLeft="@dimen/padding_20"
            android:id="@+id/today"
            android:text="Cash on Delivery"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_toRightOf="@+id/next_order"/>


    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/padding_5"
        android:textStyle="bold"
        android:id="@+id/cod"
        android:gravity="center"
        android:layout_gravity="center_horizontal"

        />
    <Button
        android:id="@+id/continue_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_horizontal_margin"
        android:text="@string/continue_text"
        android:textColor="@color/white"
        android:background="@drawable/green_solid"
        android:textSize="@dimen/padding_15"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/activity_horizontal_margin"

        />


</RelativeLayout>
