<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray"
    android:orientation="vertical"

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding10"
        android:id="@+id/Deals_layout"
        android:orientation="horizontal"
        >
      <!--  <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/tab_line"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:layout_marginLeft="@dimen/padding_120"
            android:layout_marginRight="@dimen/padding_120"

            />-->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/line"
            android:layout_gravity="center"
            android:gravity="center_horizontal"

            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Browse by category"
            android:textSize="@dimen/padding_14"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:id="@+id/deals"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/padding_10"
            android:layout_marginBottom="@dimen/padding_10"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/view_all"
            android:textSize="@dimen/padding_15"
            android:textStyle="bold"
            android:id="@+id/caption"
            android:textColor="@color/facebook"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/padding_10"
            android:layout_marginRight="@dimen/padding_5"

            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/line"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:layout_below="@+id/deals"


            />
      <!--  <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/tab_line"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:layout_marginLeft="@dimen/padding_120"
            android:layout_marginRight="@dimen/padding_120"
            android:layout_below="@+id/deals"

            />
-->


    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_list"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_225"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:orientation="horizontal" />
    <ImageView
        android:id="@+id/slider"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:src="@drawable/delivery_truck"
        android:background="@color/white"

        />


</LinearLayout>